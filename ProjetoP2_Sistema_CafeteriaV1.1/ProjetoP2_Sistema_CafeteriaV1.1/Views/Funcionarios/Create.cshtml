@model ProjetoP2_Sistema_CafeteriaV1._1.Models.Funcionarios

@{
    ViewData["Title"] = "Funcionarios";
}

<h1>Cadastrar</h1>

<h4>Funcionarios</h4>
<hr />
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="btn btn-outline-primary" asp-action="Index">Voltar</a>
        </li>
    </ul>
</div>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="_Telefone.NumTelefone" class="control-label"></label>
                <input asp-for="_Telefone.NumTelefone" class="form-control" />
                <span asp-validation-for="_Telefone.NumTelefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_Telefone.Descricao" class="control-label"></label>
                <input asp-for="_Telefone.Descricao" class="form-control" />
                <span asp-validation-for="_Telefone.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
