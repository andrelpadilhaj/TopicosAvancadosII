@model ProjetoP2_Sistema_CafeteriaV1._1.Models.Funcionarios

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>
<hr />
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="btn btn-outline-primary" asp-action="Index">Voltar</a>
        </li>
    </ul>
</div>
<br />
<hr />
<div>
    <h4>Funcionarios</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sobrenome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sobrenome)
        </dd>
    </dl>
    <br />
    <div>
        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Remover</a>
    </div>
    <br />
    <h4>Contatos</h4>
    <div>
        <a class="btn btn-outline-primary" asp-controller="Telefones" asp-action="Create" asp-route-id="@Model.Id">Novo Contato</a>
    </div>
    <hr />
    @if (Model._ListTelefones.Count > 0)
    {
        <table class="table table-bordered table-hover table-sm">
            <thead class="thead-light">
                <tr>
                    <th scope="col">
                        Telefone
                    </th>
                    <th scope="col">
                        Descricao
                    </th>
                    <th scope="col">
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody class="table-striped">
                @foreach (var item in Model._ListTelefones)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumTelefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td class="text-center">
                            <div class="text-center">
                                <a class="btn btn-outline-secondary" asp-controller="Telefones" asp-action="Edit" asp-route-id="@item.Id">Editar</a> | 
                                <a class="btn btn-outline-danger" asp-controller="Telefones" asp-action="Delete" asp-route-id="@item.Id">Remover</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>